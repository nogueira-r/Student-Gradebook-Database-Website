@model IEnumerable<GradesBooks.Models.Student>

@{
    ViewData["Title"] = "Student List";
}

<h1>Student List</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr><th>Name</th><th>Grade</th><th></th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.GradePercent</td>
                <td>
                    <a asp-controller="Student" asp-action="Details"
                   asp-route-id="@movie.StudentId"
                   asp-route-slug="@movie.Slug">Details</a>
                </td>
                <td>
                    <a asp-controller="Student" asp-action="Delete"
                   asp-route-id="@movie.StudentId"
                   asp-route-slug="@movie.Slug">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Student" asp-action="Create" class="btn btn-primary">Create Student</a>
<a asp-controller="Home" asp-action="Index" class="btn btn-primary">Sign Out</a>
